{
  "name": "makebreak-backend",
  "version": "1.0.0",
  "description": "Backend for MakeBreak - Markdown Presentation SaaS",
  "main": "dist/index.js",
  "config": {
    "puppeteer_skip_chromium_download": "true"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/templates",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dompurify": "^3.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "highlight.js": "^11.11.1",
    "jsdom": "^28.0.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^11.2.0",
    "marked-highlight": "^2.1.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "nodemailer-express-handlebars": "^6.1.0",
    "openai": "^6.22.0",
    "puppeteer-core": "^21.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/nodemailer-express-handlebars": "^4.0.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
